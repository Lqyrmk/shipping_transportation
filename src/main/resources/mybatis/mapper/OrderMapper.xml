<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lqyrmk.transportation.mapper.OrderMapper">

    <!--List<Order> getAllOrders();-->
    <select id="getAllOrders" resultType="Order">
        select * from `order`
    </select>

    <!--Order getOrderById(@Param("orderId") Integer orderId);-->
    <select id="getOrderById" resultType="Order">
        select * from `order` where order_id = #{orderId}
    </select>

    <!--void insertOrder(Order order);-->
    <insert id="insertOrder" useGeneratedKeys="true" keyProperty="orderId">
        insert into `order`(`order_id`, `shipper_id`, `carrier_id`, `shipment_place`, `addressee`, `destination`, `total_weight`, `total_price`)
        values (#{orderId}, #{shipperId}, #{carrierId}, #{shipmentPlace}, #{addressee}, #{destination}, #{totalWeight}, #{totalPrice})
    </insert>

    <!--void updateOrder(Order order);-->
    <update id="updateOrder">
        update `order`
        set `shipper_id`=#{shipperId}, `carrier_id`=#{carrierId}, `shipment_place`=#{shipmentPlace},
            `addressee`=#{addressee}, `destination`=#{destination}, `total_weight`=#{totalWeight}, `total_price`=#{totalPrice}
        where `order_id`=#{orderId}
    </update>

    <!--void deleteOrder(@Param("orderId") Integer orderId);-->
    <delete id="deleteOrder">
        delete from `order` where order_id=#{orderId}
    </delete>

    <!--void updateOrderPriceAndWeight(Order order);-->
    <update id="updateOrderPriceAndWeight">
        update `order`
        set `total_price`=#{totalPrice}, `total_weight`=#{totalWeight}
        where `order_id` = #{orderId}
    </update>

</mapper>
